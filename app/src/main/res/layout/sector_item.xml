<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="9dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sectorItem_tvSectorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sector X"
            app:layout_constraintStart_toStartOf="@+id/sectorItem_tvDependencyName"
            app:layout_constraintTop_toBottomOf="@+id/sectorItem_tvDependencyName" />

        <TextView
            android:id="@+id/sectorItem_tvDependencyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Dependeny name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sectorItem_ivSectorImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sectorItem_tvSectorDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Description of the sector Description of the sector Description of the sector Description of the sector "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sectorItem_tvDependencyName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sectorItem_tvDependencyName"
            app:layout_constraintTop_toBottomOf="@+id/sectorItem_tvSectorName" />

        <TextView
            android:id="@+id/sectorItem_tvSectorShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="S3"
            app:layout_constraintBottom_toBottomOf="@+id/sectorItem_tvSectorName"
            app:layout_constraintStart_toEndOf="@+id/sectorItem_tvSectorName"
            app:layout_constraintTop_toTopOf="@+id/sectorItem_tvSectorName" />

        <ImageView
            android:id="@+id/sectorItem_ivSectorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>